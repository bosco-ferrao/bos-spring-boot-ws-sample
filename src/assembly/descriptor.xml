<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>default</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
        <fileSet>
			<directory>${project.build.directory}/assembly/maven-dependencies</directory>
			<outputDirectory>runtime/lib</outputDirectory>
			<includes>
				<include>**/*.jar</include>
			</includes>
		</fileSet>
        <fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>runtime/lib</outputDirectory>
			<includes>
				<include>${project.artifactId}-${project.version}.jar</include>
			</includes>
		</fileSet>
        <fileSet>
            <directory>${project.build.directory}/assembly/browser</directory>
            <outputDirectory>runtime/browser</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/assembly</directory>
            <outputDirectory>runtime</outputDirectory>
            <includes>
                <include>exclusions*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/assembly/bin/janel-4.0.0-win32.exe</source>
            <outputDirectory>runtime</outputDirectory>
            <destName>${project.artifactId}.exe</destName>
        </file>
        <file>
            <source>src/assembly/template.lap</source>
            <outputDirectory>runtime</outputDirectory>
            <destName>${project.artifactId}.lap</destName>
            <filtered>true</filtered>
        </file>        
    </files>
</assembly>